[main]
readaloud=1
nthost=translate.google.com
end=Thats all for now. Have a nice day.

####################
# Alarm scheduling #
####################
[alarm]
nightmode_offset=8
set_brightness=1


###################
# Content sources #
###################
# Note: items are processed in listed order, ie. greeting should come first

[greeting]
enabled=1
type=content
handler=get_greeting.py
# Name for personalized greeting, leave empty for a generalized 'Good morning' message
name=

[openweathermap]
enabled=1
type=content
handler=get_open_weather.py
key_file=/home/lauri/python/alarmpi/openweather_api_key.json
# Find your city_id here: http://bulk.openweathermap.org/sample/
city_id=660129
# units can be either metric or imperial
units=metric

[BBC_news]
enabled=1
type=content
handler=get_bbc_news.py

###############
# TTS engines #
###############
# Notes:
# 1 order implies preference for enabled tts engines
# 2 at most one tts engine is used
# 3 if readaloud=0 in the [main] section, no tts engine will be used

[google_gcp_tts]
enabled=1
type=tts
# generate your own service key from Google Cloud console and set path to it
handler=get_gcp_tts.py
key_file=/home/lauri/python/alarmpi/Alarmpi-cdb50622e298.json

[google_translate_tts]
enabled=0
type=tts
handler=get_google_translate_tts.py

[festival_tts]
enabled=0
type=tts
handler=get_festival_tts.py


##############
# Misc tasks #
##############
[radio]
enabled=1
type=radio
# list of arguments, including the stream url, to pass to mplayer
args=-playlist https://www.yle.fi/livestream/radiosuomi.asx -loop 3 -quiet -nolirc -ao alsa 

[polling]
# This section enables polling of current weather and train data on the main
# window's sidebars
weather=1
train=1
